{
  "compilerOptions": {
    "target": "ES2020",
    "module": "node16",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist"
  },
  "include": [
    "./scripts/**/*",
    "./test/**/*",
    "./typechain-types/**/*",
    "./hardhat.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}